{% extends 'base.html.twig' %}

{% block title %}Conta index{% endblock %}

{% block body %}
    <h1>Conta index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Saldo</th>
                <th>NumeroDaConta</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contum in minhasContas %}
            <tr>
                <td>{{ contum.id }}</td>
                <td>{{ contum.saldo }}</td>
                <td>{{ contum.numeroDaConta }}</td>
                <td>{{ contum.status ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_cliente_showConta', {id:app.user.id, conta:contum.id}) }}">Minha conta</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_conta_cliente_new', {id:app.user.id}) }}">Create new</a>
{% endblock %}
